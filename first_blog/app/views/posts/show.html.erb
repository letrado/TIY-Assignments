<h1 class="title"> 
	<%= @post.title %>
</h1>

<h2 class="title" >Written by: 
	<%= @post.author %>
	<%= link_to 'Edit', edit_post_path(@post) %>
	<%=link_to 'List of Blogs', posts_path %>
	<%=link_to 'Delete', post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>
</h2><br>

<p class="body"></p>
<p><%= @post.content %></p>

<div>
	<p> <%= link_to 'Comment on this post', new_post_comment_path(@post) %></p>

</div>

